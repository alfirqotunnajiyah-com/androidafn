<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rlMain">
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvKalimahBasmalah"
            android:textColor="@color/textColor"
            android:background="#e3f4ff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="35sp"
            android:text="بِسْـــــــــــمِ اللَّهِ الرَّحْمَٰنِ الرَّحِيمِ"
            android:gravity="center"
            android:fontFamily="@font/scheherazade"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl2"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/textColorSecondary"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <TextView
                    android:background="@color/textColor"
                    android:fontFamily="@font/scheherazade"
                    android:text="12"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:id="@+id/tvNoAyah"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/btnPlayAndPause"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_btn_play"
                    android:tint="@color/colorPrimary"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.9"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_marginTop="7dp"
                    android:text="وَإِذَا لَقُوا الَّذِينَ آمَنُوا قَالُوا آمَنَّا وَإِذَا خَلَوْا إِلَىٰ شَيَاطِينِهِمْ قَالُوا إِنَّا مَعَكُمْ إِنَّمَا نَحْنُ مُسْتَهْزِئُونَ"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    android:fontFamily="@font/scheherazade"
                    android:id="@+id/tvIsiAyah"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textStyle="italic"
                    android:text="Dan bila mereka berjumpa dengan orang-orang yang beriman, mereka mengatakan: &quot;Kami telah beriman&quot;. Dan bila mereka kembali kepada syaitan-syaitan mereka, mereka mengatakan: &quot;Sesungguhnya kami sependirian dengan kamu, kami hanyalah berolok-olok&quot;."
                    android:padding="10dp"
                    android:layout_below="@id/tvIsiAyah"
                    android:textColor="@color/textColor"
                    android:id="@+id/tvArtiAyah"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>